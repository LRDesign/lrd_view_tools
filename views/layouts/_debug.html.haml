- if Rails.env.development?
  #debug
    %h2= "Debugging Info: #{Rails.env} environment"

    =debug_link "params"
    =debug_link "session"
    =debug_link "emails"
    =debug_link "headers"
                     
    - debug_block "params" do
      =lrd_debug(params)
    - debug_block 'session' do
      =lrd_debug(session)
    - debug_block 'emails' do
      =lrd_debug(ActionMailer::Base.deliveries)
    - debug_block 'headers'  do
      =lrd_debug(request.env.select {|k,v| k.match("^HTTP.*")}) 
